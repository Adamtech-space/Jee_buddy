{
    "version": 2,
    "builds": [
        {
            "src": "api.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.12",
                "maxLambdaSize": "15mb"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "api.py"
        }
    ],
    "env": {
        "PYTHONPATH": "./src",
        "DJANGO_SETTINGS_MODULE": "core.settings"
    }
}
