{
    "version": 2,
    "builds": [
        {
            "src": "api.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.12",
                "maxLambdaSize": "15mb"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/media/(.*)",
            "dest": "/media/$1"
        },
        {
            "src": "/(.*)",
            "dest": "api.py"
        }
    ],
    "env": {
        "PYTHONPATH": "./src",
        "DJANGO_SETTINGS_MODULE": "core.settings",
        "DJANGO_ALLOWED_HOSTS": ".vercel.app",
        "DEBUG": "False"
    }
}
