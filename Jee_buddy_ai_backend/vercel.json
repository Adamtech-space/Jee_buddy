{
    "version": 2,
    "builds": [
        {
            "src": "api.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.12",
                "maxLambdaSize": "15mb",
                "handler": "api.app"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1",
            "headers": {
                "cache-control": "public, max-age=31536000, immutable"
            }
        },
        {
            "src": "/media/(.*)",
            "dest": "/media/$1",
            "headers": {
                "cache-control": "public, max-age=31536000, immutable"
            }
        },
        {
            "src": "/(.*)",
            "dest": "api.py",
            "headers": {
                "Access-Control-Allow-Origin": "*",
                "Access-Control-Allow-Methods": "GET,POST,PUT,DELETE,OPTIONS,HEAD,PATCH",
                "Access-Control-Allow-Headers": "*"
            }
        }
    ],
    "env": {
        "PYTHONPATH": "./src",
        "DJANGO_SETTINGS_MODULE": "core.settings",
        "DJANGO_ALLOWED_HOSTS": "*",
        "DEBUG": "False",
        "PYTHONUNBUFFERED": "1"
    }
}
